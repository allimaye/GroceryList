<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hostzi.aniketlimaye.grocerylist" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/grocery_list_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name="com.hostzi.aniketlimaye.grocerylist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hostzi.aniketlimaye.grocerylist.FoodList"
            android:icon="@mipmap/grocery_list_icon"
            android:label="Food Items"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
            android:name="com.hostzi.aniketlimaye.grocerylist.SendText"
            android:icon="@mipmap/ic_launcher"
            android:label="Send Grocery List by Text"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>

    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>

</manifest>
